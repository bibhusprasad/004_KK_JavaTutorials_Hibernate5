<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<!-- JDBC Database connection settings -->
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/kkhibernate?useSSL=false</property>
		<property name="connection.username">root</property>
		<property name="connection.password">ipsita</property>

		<!-- Select our SQL dialect -->
		<property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>

		<!-- Echo the SQL to stdout -->
		<property name="show_sql">true</property>
		<property name="hbm2ddl.auto">create</property>
		<property name="format_sql">true</property>
		
		<mapping class="com.kkhibernate.entity.Person"/>
		<mapping class="com.kkhibernate.entity.Employee"/>
		<mapping class="com.kkhibernate.entity.Student"/>

	</session-factory>
</hibernate-configuration>